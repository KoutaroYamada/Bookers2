<div class="col-xs-3">
  <h2>User info</h2>
  <table class="table">
    <tr>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:"no_image.jpg",size:'100x100' %>
    </tr>

    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>

  </table>

<div class="row">
  <%=link_to"", edit_user_path(user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>



<h2>New Book</h2>
<!-- form_forで投稿機能を作る -->
<%= form_for(booknew) do |f| %>

  <div class="form-group">
    <label for="title">タイトル</label>
    <%= f.text_field :title, autofocus: true, id:"title",  class:"form-control" %>
  </div>

  <div class="form-group">
    <label for="opinion">オピニオン</label>
    <%= f.text_area :body, id:"opinion", class:"form-control"  %>
  </div>

  <%= f.submit "投稿する", class:"btn btn-primary form-control"  %>
  <% end %>

</div>
