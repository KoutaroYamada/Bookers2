    <div class="row">
      <%= render './profile_createbook',user: @user,booknew: @booknew  %>

       <div class="col-xs-9">
         <h2>Users</h2>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <tr>
            <% @users.each do |user|  %>
            <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:"no_image.jpg",size:'40x40'  %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to"Show", user_path(user) %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
