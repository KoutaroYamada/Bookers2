<% if flash[:notice] %>
  <% flash[:notice] %>
<% end %>

    <div class="row">
      <%= render './profile_createbook',user: @user,booknew: @booknew  %>

       <div class="col-xs-9">
         <h2>Book detail</h2>

        <table class="table">
          <tbody>
            <td><%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:"no_image.jpg",size:'40x40'  %>
                  <div>
                   <%= @user.name %>
                 </div>
                <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book)  %></td>
            <td><%= @book.body  %></td>
            <% if current_user.id == @book.user_id  %>
              <td><%= link_to "Edit",edit_book_path(@book),class:"btn btn-success" %></td>
              <td><%= link_to "Destroy",book_path(@book),class:"btn btn-danger",method: :delete,"data-confirm"=>"本当に削除しますか？" %></td>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
