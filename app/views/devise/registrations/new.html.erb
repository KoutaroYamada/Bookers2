    <div class="row">
      <div class="col-md-6 col-md-offset-3">

          <fieldset>
            <legend>サインアップ</legend>
            <p>必須項目を入力してから登録ボタンを押して下さい。</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

          <div class="form-group">
            <label for="name">名前 <span class="label label-danger">必須</span></label>
            <%= f.text_field :name, autofocus: true, id:"name", placeholder:"名前", class:"form-control"  %>
          </div>


          <div class="form-group">
            <label for="inputEmail">メールアドレス <span class="label label-danger">必須</span></label>
            <%= f.email_field :email, id:"inputEmail", placeholder:"メールアドレス", class:"form-control"  %>
          </div>


          <div class="form-group">
            <label for="inputPassword">パスワード <span class="label label-danger">必須</span></label>
            <%= f.password_field :password, id:"inputPassword", placeholder:"パスワード", class:"form-control"  %>
          </div>


          <div class="form-group">
            <label for="inputConfirmPassword">パスワード（確認） <span class="label label-danger">必須</span></label>
            <%= f.password_field :password_confirmation, id:"inputConfirmPassword", placeholder:"パスワード（確認）", class:"form-control"  %>
          </div>

          <%= f.submit "登録する", class:"btn btn-primary"  %>
          <% end %>

          </fieldset>

        </div>

      </div>
    </div>
